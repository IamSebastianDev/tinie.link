{
	"name": "tinie.xyz",
	"repository": "https://github.com/IamSebastianDev/tinie.xyz.git",
	"author": "Sebastian Heinz <sebsatian@iamsebastian.dev>",
	"license": "MIT",
	"private": true,
  "workspaces": [
    "packages/*",
    "apps/*",
    "workers/*"
  ],
  "scripts": {
    "preci": "rm -rf node_modules",
    "ci": "bun install --frozen-lockfile",
    "setup": "npx husky init",
    "dev": "turbo dev",
    "start:client": "reserved for starting client later",
    "start:server": "cd ./apps/@tinie-server && bun run ./src/index.ts",
    "docker:build": "docker build  -t tinie-xyz-webserver:latest -f ./apps/@tinie-server/dockerfile.server .",
    "db:migrate:local":"bun run packages/@tinie-dynamo/migrations/create-url-table.ts",
    "db:migrate:docker": "docker exec -it tinie-xyz-webserver sh -c 'bun run packages/@tinie-dynamo/migrations/create-url-table.ts' -d",
    "db:up": "docker compose -f ./docker-compose.db.yml up -d",
    "db:down": "docker compose -f ./docker-compose.db.yml down",
    "system:up": "docker compose -f ./docker-compose.network.yml up -d ", 
    "system:down": "docker compose -f ./docker-compose.network.yml down "
  },
  "devDependencies": {
    "@commitlint/cli": "^19.0.3",
    "@commitlint/config-conventional": "^19.0.3",
    "alex": "^11.0.1",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2",
    "prettier": "^3.2.5",
    "turbo": "^1.12.5",
    "typescript": "^5.4.2"
  },
  "lint-staged": {
    "*.{ts,css,md}": "prettier --write"
  }
}
